<%= form_for [refinery, :references_admin, @reference] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @reference,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @reference.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.references.admin.references.reference'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @reference.title) -%>
<% end -%>
