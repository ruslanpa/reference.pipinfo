<% content_for :body do %>
    <%= form_tag("/references", method: "get", class: "pure-form search") do %>
        <fieldset>
          <%= text_field_tag :search, params[:search], :class => "search-box" %>
          <%= submit_tag "Search", :name => nil, :class => "pure-button button-secondary" %>
        </fieldset>
    <% end %>

    <% @references.each do |reference| %>
        <div class="reference">
          <label class="ref-id"><%= reference.id %></label>
          <label class="ref-name"><%= reference.name %></label>
          <label class="ref-title"><%= reference.title %></label>
          <label class="tel">Tel: <%= reference.phone %></label>
        </div>
    <% end %>

<% end %>

<%= render '/refinery/content_page' %>
