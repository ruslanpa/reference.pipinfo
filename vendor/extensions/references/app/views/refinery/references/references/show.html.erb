<% content_for :body_content_title do %>
  <%= @reference.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @reference.title %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @reference.name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @reference.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @reference.phone %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="references">
      <% @references.each do |reference| %>
        <li>
          <%= link_to reference.title, refinery.references_reference_path(reference) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
